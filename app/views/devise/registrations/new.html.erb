<div class="form">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <!-- created a username input -->
    <div class="field">
      <!-- <%= f.label :username %> -->
      <br />
      <%= f.text_field :username, autofocus: true, :placeholder=> "           username" %>
    </div>

    <div class="field">
      <!-- <%= f.label :email %> -->
      <br />
      <%= f.email_field :email, :placeholder => "               email" %>
    </div>

    <div class="field">
      <!-- <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %> -->
      <br />
      <%= f.password_field :password, autocomplete: "off", :placeholder=> "  password 8 chars. min" %>
    </div>

    <div class="field">
      <!-- <%= f.label :password_confirmation %> -->
      <br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder=> "  password confirmation" %>
    </div>
    <br />
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
  <!-- <%= render "devise/shared/links" %> -->
</div>
